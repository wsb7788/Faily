<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cl_text"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/box_chat_me"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:text="asdjflkasdjf"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text_time"
        app:layout_constraintEnd_toStartOf="@id/cl_text"
        app:layout_constraintBottom_toBottomOf="@id/cl_text"
        android:textSize="10sp"
        android:text="aslkdfj"
        android:layout_marginEnd="5dp"
        android:textColor="@color/grayscale_2"/>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:src="@drawable/ic_change_profile_image"
        android:id="@+id/iv_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_image_time"
        app:layout_constraintEnd_toStartOf="@id/iv_image"
        app:layout_constraintBottom_toBottomOf="@id/iv_image"
        android:textSize="10sp"
        android:text="aslkdfj"
        android:layout_marginEnd="5dp"
        android:textColor="@color/grayscale_2"/>




</androidx.constraintlayout.widget.ConstraintLayout>